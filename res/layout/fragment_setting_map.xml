<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleOfflineMap"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_map_offline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="离线地图管理"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="高"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleNavi"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_map_nav" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="默认导航"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textNavigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="百度"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleRouteRecord"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_map_route_onoff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="行车轨迹记录"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                
                <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchRouteRecord"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textRouteRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/switchRouteRecord"
                    android:text="打开"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleRouteSmooth"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_map_route_smooth" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="轨迹平滑度优化"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />
                
                 <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchRouteSmooth"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textRouteSmooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/switchRouteSmooth"
                    android:text="打开"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleRouteSpan"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_map_route_span" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="轨迹绘制取样精度"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textRouteSpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="高"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>