<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleSpeakHour"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_voice_speak_hour" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="整点语音报时"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchSpeakHour"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textVoiceSpeakHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/switchSpeakHour"
                    android:text="关闭"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleVoiceAccent"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_voice_voice_accent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="语音口音"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textVoiceAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="普通话"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleSpeakWeather"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_voice_speak_weather" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="天气自动播报"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchSpeakWeather"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textSpeakWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/switchSpeakWeather"
                    android:text="打开"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleUpdateWeather"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_voice_update_weather" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="天气数据自动更新"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchUpdateWeather"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textUpdateWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/switchUpdateWeather"
                    android:text="打开"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>