<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutVideoAutoRecord"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_camera_auto_record" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="开机自动录像"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <com.tchip.carlauncher.view.SwitchButton
                    android:id="@+id/switchAutoRecord"
                    style="@style/SwitchButtonStyle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right" />

                <TextView
                    android:id="@+id/textVideoAutoRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/switchAutoRecord"
                    android:text="关闭"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleVideoSize"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_camera_video_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="视频尺寸"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textVideoSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="720P"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleVideoTime"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_camera_video_length" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="视频长度分割"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textVideoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="5分钟"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleCrashSensitive"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_camera_crash_sensitive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="碰撞侦测灵敏度"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textCrashSensitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="中"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />

            <RelativeLayout
                android:id="@+id/layoutRippleVideoQuality"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/ui_setting_item_bg"
                android:clickable="true" >

                <ImageView
                    android:layout_width="@dimen/setting_item_image_height"
                    android:layout_height="@dimen/setting_item_image_height"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_image_margin_left"
                    android:src="@drawable/ui_setting_camera_video_quality" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_item_text_margin_left"
                    android:text="视频质量"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_title_text_size" />

                <TextView
                    android:id="@+id/textVideoQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/setting_item_content_marign_right"
                    android:text="高"
                    android:textColor="@color/setting_item_title_color"
                    android:textSize="@dimen/setting_item_content_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>